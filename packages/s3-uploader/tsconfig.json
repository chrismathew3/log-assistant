{
  "compilerOptions": {
    "rootDir": "src",         
    "outDir": "dist",         
    "module": "CommonJS",     
    "target": "ES2020",       
    "strict": true,           
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,     
    "declaration": true,      
    "sourceMap": false        
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}